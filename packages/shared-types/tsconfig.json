{
    "compilerOptions": {
        "target": "ES2021",
        "module": "commonjs",
        "declaration": true,
        "strict": true,
        "outDir": "./dist",
        "rootDir": "./src",
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules",
        "dist"
    ]
}