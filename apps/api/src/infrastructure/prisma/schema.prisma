// ─── Prisma Schema — Event Insights Platform ───
// PostgreSQL relational core: Organizations, Users, Events, AggregatedMetrics

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ─── Multi-Tenant Root ───
model Organization {
  id        String   @id @default(cuid())
  name      String
  slug      String   @unique
  createdAt DateTime @default(now()) @map("created_at")
  updatedAt DateTime @updatedAt @map("updated_at")

  users             User[]
  events            Event[]
  aggregatedMetrics AggregatedMetric[]

  @@map("organizations")
}

// ─── User ───
enum UserRole {
  OWNER
  ADMIN
  MEMBER
}

model User {
  id           String   @id @default(cuid())
  email        String   @unique
  passwordHash String   @map("password_hash")
  name         String
  role         UserRole @default(MEMBER)
  orgId        String   @map("org_id")
  createdAt    DateTime @default(now()) @map("created_at")
  updatedAt    DateTime @updatedAt @map("updated_at")

  organization Organization @relation(fields: [orgId], references: [id], onDelete: Cascade)

  @@index([orgId])
  @@map("users")
}

// ─── Event Definition ───
enum EventType {
  PAGE_VIEW
  CLICK
  CONVERSION
  CUSTOM
}

model Event {
  id          String    @id @default(cuid())
  name        String
  type        EventType @default(CUSTOM)
  description String?
  orgId       String    @map("org_id")
  createdAt   DateTime  @default(now()) @map("created_at")
  updatedAt   DateTime  @updatedAt @map("updated_at")

  organization      Organization       @relation(fields: [orgId], references: [id], onDelete: Cascade)
  aggregatedMetrics AggregatedMetric[]

  @@index([orgId])
  @@map("events")
}

// ─── Pre-Computed Analytics ───
enum MetricType {
  TOTAL_COUNT
  UNIQUE_SESSIONS
  CONVERSIONS
}

model AggregatedMetric {
  id          String     @id @default(cuid())
  eventId     String     @map("event_id")
  orgId       String     @map("org_id")
  metricType  MetricType @map("metric_type")
  value       Float      @default(0)
  periodStart DateTime   @map("period_start")
  periodEnd   DateTime   @map("period_end")
  createdAt   DateTime   @default(now()) @map("created_at")
  updatedAt   DateTime   @updatedAt @map("updated_at")

  event        Event        @relation(fields: [eventId], references: [id], onDelete: Cascade)
  organization Organization @relation(fields: [orgId], references: [id], onDelete: Cascade)

  @@unique([eventId, orgId, metricType, periodStart])
  @@index([orgId, periodStart])
  @@index([eventId, metricType])
  @@map("aggregated_metrics")
}
