        "@nestjs/mongoose": "^10.0.0",
        "@nestjs/passport": "^10.0.0",
        "@nestjs/platform-express": "^10.0.0",
        "@prisma/client": "^5.0.0",
        "bcrypt": "^5.1.0",
        "bullmq": "^5.0.0",
        "class-transformer": "^0.5.1",
        "ioredis": "^5.3.0",
        "mongoose": "^8.0.0",
        "passport": "^0.7.0",
        "passport-jwt": "^4.0.1",
        "reflect-metadata": "^0.2.0",
        "rxjs": "^7.8.0",
        "zod": "^3.22.0"
