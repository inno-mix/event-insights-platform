{
    "name": "@eip/api",
    "version": "1.0.0",
    "private": true,
    "description": "Event Insights Platform â€” NestJS API",
    "scripts": {
        "build": "nest build",
        "start": "nest start",
        "start:dev": "nest start --watch",
        "start:debug": "nest start --debug --watch",
        "start:prod": "node dist/main",
        "lint": "eslint \"{src,test}/**/*.ts\" --fix",
        "db:generate": "dotenv -e ../../.env -- prisma generate --schema=src/infrastructure/prisma/schema.prisma",
        "db:migrate": "dotenv -e ../../.env -- prisma migrate dev --schema=src/infrastructure/prisma/schema.prisma",
        "db:seed": "dotenv -e ../../.env -- ts-node src/infrastructure/prisma/seed.ts"
    },
    "dependencies": {
        "@nestjs/bullmq": "^10.0.0",
        "@nestjs/common": "^10.0.0",
